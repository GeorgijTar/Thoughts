@model BlogIndexWebModel
@{
    ViewBag.Title = "Лента записей";
}

<!-- Blogs - список заметок блога, страница блогов -->
<header class="major">
    <h1>@ViewBag.Title</h1>
</header>

<div class="posts">
    @foreach (var e in Model.Posts)
    {
        <article>
            <h3>@e.Title</h3>
            <p>Дата: @e.Date.ToString("dd.MM.yyyy")</p>
            <p>@Html.Raw(e.Body)</p>
            <p>Автор: @e.User?.NickName</p>
            <ul class="actions">
                <li><a asp-controller="Blog" asp-action="Details" asp-route-id="@e.Id" class="button">Подробнее ...</a></li>
            </ul>
        </article>
    }

