<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Thoughts.UI.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Thoughts.UI.MAUI.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Home">
            <ShellContent Title="Home"
                          ContentTemplate="{DataTemplate views:MainPage}"
                          Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Weathers">
            <ShellContent Title="Weathers"
                          ContentTemplate="{DataTemplate views:WeatherInfosPage}"
                          Route="WeatherInfosPage" />
    </FlyoutItem>

    <FlyoutItem Title="Blogs">
            <ShellContent Title="Blogs"
                          ContentTemplate="{DataTemplate views:BlogsPage}"
                          Route="BlogsPage" />

    </FlyoutItem>
</Shell>