<Window x:Class="Thoughts.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thoughts.UI.WPF"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="700" Width="1300" Icon="/Views/Windows/Logo64.png"
        DataContext="{Binding MainModel, Source={StaticResource Locator}}" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="AliceBlue" Offset="1"/>
            <GradientStop Color="#FFFDD912" Offset="0"/>
            <GradientStop Color="#FFF7E77E" Offset="0.316"/>
            <GradientStop Color="Gold" Offset="0"/>
            <GradientStop Color="#FFF0E912" Offset="0.597"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>

    </Grid>
</Window>
